<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="UseCompoundDrawables"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_thumbnail_top_rated_movie"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/tv_movie_top_rated_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/iv_thumbnail_top_rated_movie"
        android:layout_toStartOf="@id/tv_movie_top_rated_vote"
        android:text="Title"
        android:textColor="@color/colorText"/>

    <TextView
        android:id="@+id/tv_movie_top_rated_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/iv_thumbnail_top_rated_movie"
        android:text="7.5/10"
        android:textColor="@color/colorText"/>


</RelativeLayout>